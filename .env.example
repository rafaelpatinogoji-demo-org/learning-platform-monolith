# Server Configuration
PORT=4000
NODE_ENV=development

# Security (REQUIRED in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Database (Docker Compose setup)
# For local development with Docker: postgresql://learnlite:learnlite_dev_password@localhost:5432/learnlite
# For production: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://learnlite:learnlite_dev_password@localhost:5432/learnlite

# MongoDB Authentication Database
# For local development: mongodb://localhost:27017/learnlite_auth
# For production: mongodb://username:password@host:port/database_name
MONGODB_AUTH_URL=mongodb://localhost:27017/learnlite_auth

# Logging
LOG_LEVEL=info

# Application Settings
APP_NAME=learnlite

# Notifications Module
# Enable/disable the notifications worker
NOTIFICATIONS_ENABLED=false

# Where to send notifications: 'console' or 'file'
# If 'file', notifications will be written to var/notifications.log
NOTIFICATIONS_SINK=console
